<style>
  .task {
    width: <%= @margin %>px
  }
  <% 6.times do |i| %>
    <% color = (i % 2 == 0) ? 'black' : 'white' %>
    .bullet-<%= i %> {
      background: transparent url('/images/bullet-<%= color %>.png') no-repeat
        <%= @margin + 2 + (28 * i) %>px 6px;
      padding-left: <%= @margin + 28 + (28 * i) %>px;
    }
  <% end %>
  h1, .indented {
    padding-left: <%= @margin + 10 %>px;
  }
</style>
